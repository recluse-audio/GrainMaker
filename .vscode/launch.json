{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug Standalone App",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/GrainMaker_artefacts/Debug/Standalone/GrainMaker.app/Contents/MacOS/GrainMaker",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch and Debug Catch2 Tests",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/BUILD/Debug/Tests",
            "args": ["--break"],
            "cwd": "${workspaceFolder}",
            //"preLaunchTask": "Build and Run Catch2 Tests"
        },
        {
            "name": "Launch and Debug [Granulator] Catch2 Tests",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/BUILD/Debug/Tests",
            "args": ["[Granulator]", "--break"],
            "cwd": "${workspaceFolder}",
            //"preLaunchTask": "Build and Run Catch2 Tests"
        },
        {
            "name": "Launch and Debug [PluginProcessor] Catch2 Tests",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/BUILD/Debug/Tests",
            "args": ["[PluginProcessor]", "--break"],
            "cwd": "${workspaceFolder}",
            //"preLaunchTask": "Build and Run Catch2 Tests"
        },
        {
            "name": "Attach to Process",
            "type": "lldb",
            "request": "attach",
            "pid": "${command:pickProcess}",
			"stopOnEntry": true
        }
          
    ]
}
